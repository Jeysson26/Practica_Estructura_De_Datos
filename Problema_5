package recursividad;

import java.util.Scanner;

/**
 *
 * @author Jeysson
 */
public class Recursividad {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {

        double vbl_1 = 0;
        int vbl_2 = 0;

        Scanner sc = new Scanner(System.in);

        System.out.print("Ingrese la base: ");
        vbl_1=sc.nextDouble();
        System.out.print("Ingrese la potencia: ");
        vbl_2=sc.nextInt();

        if(vbl_2>0){
        System.out.print(Potencia(vbl_1,vbl_2));
        }
        else{
          System.out.print("Ingrese un M postivo");
        }


    }
    public static double Potencia(double vbl_1, int vbl_2){
      double resultado = 0;

      resultado = Math.pow(vbl_1,vbl_2);
      return resultado;

    }
}
